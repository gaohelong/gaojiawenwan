.swiper swiper {
    width: 100%;
    height: 500rpx;
}

.swiper swiper image {
    width: 100%;
    height: 500rpx;
}

.nav {
    white-space: nowrap;
    font-size: 26rpx;
}

.nav .row {
    display: inline-block;
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    text-align: center;
}

.list .title {
    padding-top: 20rpx;
    padding-left: 20rpx;
    padding-bottom: 20rpx;
    font-size: 28rpx;
    font-weight: 800;
    border-top: 1rpx solid #ccc;
}

.list .img {
    padding-bottom: 20rpx;
}

.list .img image {
    width: 96%;
    height: 260rpx;
    margin-left: 2%;
    border-radius: 16rpx;
}

.loading {
    position: relative;
    left: 50%;
    width: 200rpx;
    line-height: 60rpx;
    background-color: rgba(0, 0, 0, 0.3);
    margin-left: -100rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    border-radius: 8rpx;
}

.scrollAlert {
    line-height: 80rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    border-bottom: solid #ccc 1rpx;
    font-size: 26rpx;
}
