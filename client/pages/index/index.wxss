.swiper swiper {
    width: 100%;
    height: 500rpx;
}

.swiper swiper image {
    width: 100%;
    height: 500rpx;
}

.nav {
    display: flex;
    flex-direction: row;
    font-size: 26rpx;
    line-height: 60rpx;
}

.nav .row {
    width: 22.5%;
    margin-left: 5%;
    margin-right: 5%;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    flex-grow: 1;
    flex-shrink: 1;
    text-align: center;
}

.list .title {
    padding-top: 20rpx;
    padding-left: 20rpx;
    padding-bottom: 20rpx;
    font-size: 28rpx;
    font-weight: 800;
    border-top: 1rpx solid #ccc;
}

.list .img {
    padding-bottom: 20rpx;
}

.list .img image {
    width: 96%;
    height: 260rpx;
    margin-left: 2%;
    border-radius: 16rpx;
}

.loading {
    position: relative;
    left: 50%;
    width: 200rpx;
    line-height: 60rpx;
    background-color: rgba(0, 0, 0, 0.3);
    margin-left: -100rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    border-radius: 8rpx;
}
